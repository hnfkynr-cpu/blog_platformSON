@model List<İÇERİK_YÖNETİMİ_VE_BLOG_1.Models.YaziModeli>

@{
    ViewData["Title"] = "Profil";
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Profil - Novus</title>
    <style>
        /* --- TEMEL AYARLAR --- */
        body {
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
            margin: 0;
            background-color: #fff;
            color: #242424;
            overflow-x: hidden; /* Yan kaydırmayı engelle */
        }

        .layout-container {
            display: flex;
            min-height: 100vh;
        }

        /* --- 1. SOL MENÜ (Stabil Tasarım) --- */
        .sidebar-left {
            width: 280px;
            padding: 24px;
            border-right: 1px solid #f2f2f2;
            position: sticky;
            top: 0;
            height: 100vh;
            display: flex;
            flex-direction: column;
            box-sizing: border-box;
            flex-shrink: 0;
            background-color: white;
            z-index: 100;
        }

        .logo-container {
            display: flex;
            align-items: center;
            /* gap: 15px; <- İkon silindiği için boşluk gereksiz */
            margin-bottom: 35px;
        }

        .logo {
            font-size: 26px;
            font-weight: 800;
            letter-spacing: -1px;
            color: #000;
            text-decoration: none;
        }

        .menu-item {
            display: flex;
            align-items: center;
            padding: 10px 0;
            font-size: 15px;
            color: #757575;
            text-decoration: none;
            transition: all 0.2s;
        }

            .menu-item:hover, .menu-item.active {
                color: #000;
                font-weight: 500;
            }

        .menu-icon {
            margin-right: 15px;
            font-size: 20px;
            text-align: center;
            width: 24px;
        }

        /* Özel Renkli Write Butonu */
        .write-btn {
            color: #1a8917 !important;
            margin-top: 10px;
        }

            .write-btn:hover {
                color: #156d12 !important;
            }

        /* Gruplama Çizgisi ve Başlıkları */
        .menu-group {
            margin-top: 25px;
            padding-top: 15px;
            border-top: 1px solid #f2f2f2;
            display: flex;
            flex-direction: column;
        }

        .menu-group-title {
            font-size: 12px;
            font-weight: 700;
            color: #242424;
            margin-bottom: 15px;
            text-transform: uppercase;
        }


        /* --- 2. ORTA İÇERİK --- */
        .main-content {
            flex: 1;
            padding: 50px 80px;
            max-width: 700px;
        }

        .profile-name-header {
            font-size: 42px;
            font-weight: 700;
            margin-bottom: 30px;
            color: #242424;
        }

        .tabs {
            display: flex;
            gap: 30px;
            border-bottom: 1px solid #f2f2f2;
            margin-bottom: 40px;
        }

        .tab {
            padding-bottom: 15px;
            font-size: 14px;
            color: #757575;
            cursor: pointer;
            border-bottom: 1px solid transparent;
        }

            .tab.active {
                color: #242424;
                font-weight: 500;
                border-bottom: 1px solid #242424;
            }

        /* Reading List Kartı */
        .reading-list-card {
            border: 1px solid #f2f2f2;
            border-radius: 4px;
            padding: 20px;
            display: flex;
            justify-content: space-between;
            background-color: #fafafa;
            cursor: pointer;
            margin-bottom: 30px;
        }

        .card-left {
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

        .card-user-info {
            display: flex;
            align-items: center;
            font-size: 13px;
            font-weight: 500;
            margin-bottom: 10px;
        }

        .card-user-avatar {
            width: 20px;
            height: 20px;
            border-radius: 50%;
            background-color: #000;
            margin-right: 8px;
        }

        .card-title {
            font-size: 22px;
            font-weight: 700;
            margin-bottom: 30px;
        }

        .card-footer {
            display: flex;
            align-items: center;
            font-size: 13px;
            color: #757575;
            gap: 10px;
        }

        .card-right-visual {
            display: flex;
            gap: 2px;
            border: 1px solid #e6e6e6;
            border-radius: 4px;
            overflow: hidden;
            width: 140px;
            height: 100px;
            background: white;
            padding: 2px;
        }

        .gray-bar {
            flex: 1;
            background-color: #f2f2f2;
        }


        /* --- 3. SAĞ KENAR ÇUBUĞU --- */
        .sidebar-right {
            width: 320px;
            border-left: 1px solid #f2f2f2;
            padding: 40px;
            display: flex;
            flex-direction: column;
        }

        .profile-pic-large {
            width: 88px;
            height: 88px;
            border-radius: 50%;
            background-color: #000;
            margin-bottom: 20px;
            overflow: hidden;
        }

            .profile-pic-large img {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }

        .sidebar-name {
            font-weight: 600;
            font-size: 16px;
            margin-bottom: 10px;
        }

        .edit-profile-link {
            color: #1a8917;
            font-size: 14px;
            text-decoration: none;
            margin-bottom: 30px;
        }

    </style>
</head>
<body>

    <div class="layout-container">

        <nav class="sidebar-left">
            <div class="logo-container">
                <a href="/Home/Index" class="logo">NOVUS</a>
            </div>

            <a href="/Home/Index" class="menu-item"><span class="menu-icon">🏠</span> Home</a>
            <a href="/Home/Library" class="menu-item"><span class="menu-icon">📚</span> Library</a>

            <a href="/Home/Profile" class="menu-item active"><span class="menu-icon">👤</span> Profile</a>

            <div class="menu-group">
                <a href="/Home/Stories" class="menu-item"><span class="menu-icon">📝</span> Stories</a>
                <a href="/Home/Stats" class="menu-item"><span class="menu-icon">📊</span> Stats</a>
                <a href="/Home/Write" class="menu-item write-btn">
                    <span class="menu-icon">✍️</span> Write
                </a>
            </div>

            <div class="menu-group">
                <div class="menu-group-title">FOLLOWERS</div>
                <a href="/Home/Channels" class="menu-item">
                    <span class="menu-icon">🔔</span> Channels
                </a>
            </div>

            <div style="margin-top: auto; font-size: 11px; color: #bdc3c7;">
                © 2025 Novus • Privacy • Terms
            </div>
        </nav>


        <main class="main-content">
            <h1 class="profile-name-header">ZeynepSelimeKartal</h1>

            <div class="tabs">
                <div class="tab active">Home</div>
                <div class="tab">About</div>
            </div>

            <div class="reading-list-card">
                <div class="card-left">
                    <div>
                        <div class="card-user-info">
                            <div class="card-user-avatar">
                                <img src="https://ui-avatars.com/api/?name=Zeynep+Selime&background=000&color=fff" style="width:100%; height:100%; border-radius:50%;">
                            </div>
                            <span>ZeynepSelimeKartal</span>
                        </div>
                        <div class="card-title">Reading list</div>
                    </div>
                    <div class="card-footer">
                        <span>No stories</span>
                        <span>🔒</span>
                        <span style="margin-left:auto; font-size:18px;">...</span>
                    </div>
                </div>
                <div class="card-right-visual">
                    <div class="gray-bar"></div>
                    <div class="gray-bar"></div>
                    <div class="gray-bar"></div>
                </div>
            </div>
        </main>


        <aside class="sidebar-right">
            <div class="profile-pic-large">
                <img src="https://ui-avatars.com/api/?name=Z+K&background=000&color=fff&size=128" alt="Profile">
            </div>
            <div class="sidebar-name">ZeynepSelimeKartal</div>
            <a href="#" class="edit-profile-link">Edit profile</a>
        </aside>

    </div>

</body>
</html>
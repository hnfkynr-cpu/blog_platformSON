@model List<İÇERİK_YÖNETİMİ_VE_BLOG_1.Models.YaziModeli>

@{
    ViewData["Title"] = "Profil";
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Profil - Novus</title>

    <style>
        /* ================== TEMEL ================== */
        body {
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Arial, sans-serif;
            margin: 0;
            background: #f7f9fc;
            color: #242424;
            overflow-x: hidden;
        }

        .layout-container {
            display: flex;
            min-height: 100vh;
        }

        /* ================== SOL SIDEBAR ================== */
        .sidebar-left {
            width: 280px;
            padding: 26px 22px;
            border-right: 1px solid rgba(0,0,0,0.06);
            position: sticky;
            top: 0;
            height: 100vh;
            display: flex;
            flex-direction: column;
            background: #fff;
        }

        .logo {
            font-size: 30px;
            font-weight: 900;
            letter-spacing: -1.2px;
            color: #0f172a;
            text-decoration: none;
            margin-bottom: 28px;
            line-height: 1;
        }

        .menu-item {
            display: flex;
            align-items: center;
            padding: 12px 12px;
            border-radius: 14px;
            font-size: 15px;
            color: #64748b;
            text-decoration: none;
            transition: .18s ease;
        }

            .menu-item:hover {
                background: rgba(15, 23, 42, 0.04);
                color: #0f172a;
            }

            .menu-item.active {
                background: linear-gradient(90deg, rgba(59,130,246,0.12), rgba(99,102,241,0.08));
                color: #0f172a;
                font-weight: 700;
            }

        .menu-icon {
            width: 24px;
            margin-right: 14px;
            font-size: 18px;
        }

        .write-btn {
            color: #16a34a !important;
            font-weight: 700;
        }

        .menu-group {
            margin-top: 22px;
            padding-top: 16px;
            border-top: 1px solid rgba(0,0,0,0.06);
        }

        /* ================== ORTA ALAN ================== */
        .main-content {
            flex: 1;
            padding: 48px 64px;
            max-width: 820px;
            text-align: center;
            /* sayfa dengesi */
            margin: 0 auto;
        }

        .profile-name-header {
            font-size: 54px;
            font-weight: 900;
            margin: 6px 0 22px;
            font-family: ui-serif, Georgia, serif;
            color: #0f172a;
            letter-spacing: -1px;
        }

        /* ================== TABS ================== */
        .tabs {
            display: inline-flex;
            gap: 10px;
            align-items: center;
            justify-content: center;
            padding: 8px;
            border-radius: 999px;
            background: rgba(255,255,255,0.9);
            border: 1px solid rgba(0,0,0,0.06);
            box-shadow: 0 10px 26px rgba(0,0,0,0.05);
            margin: 0 0 18px;
        }

        .tab {
            border: 0;
            background: transparent;
            padding: 10px 14px;
            border-radius: 999px;
            cursor: pointer;
            font-weight: 700;
            color: #64748b;
            transition: .18s ease;
        }

            .tab:hover {
                background: rgba(15, 23, 42, 0.04);
                color: #0f172a;
            }

            .tab.active {
                color: #0f172a;
                background: linear-gradient(90deg, rgba(59,130,246,0.18), rgba(99,102,241,0.12));
                box-shadow: 0 10px 22px rgba(0,0,0,0.06);
            }

        .tab-panel {
            display: none;
        }

            .tab-panel.active {
                display: block;
            }

        /* ================== EMPTY STATE ================== */
        .empty-state-card {
            border: 1px solid rgba(0,0,0,0.06);
            border-radius: 20px;
            padding: 34px 28px;
            background: radial-gradient(120% 120% at 50% 0%, rgba(59,130,246,0.10), rgba(99,102,241,0.06) 35%, rgba(255,255,255,0.95) 75%);
            box-shadow: 0 18px 48px rgba(2,6,23,0.08);
        }

            .empty-state-card h3 {
                margin: 0 0 10px;
                font-size: 22px;
                font-weight: 900;
                color: #0f172a;
            }

            .empty-state-card p {
                margin: 0 0 16px;
                color: #64748b;
                line-height: 1.7;
                font-size: 14.5px;
            }

            .empty-state-card a {
                display: inline-flex;
                align-items: center;
                justify-content: center;
                gap: 10px;
                padding: 10px 16px;
                border-radius: 999px;
                text-decoration: none;
                font-weight: 800;
                color: #0f172a;
                border: 1px solid rgba(0,0,0,0.08);
                background: #fff;
                transition: .18s ease;
            }

                .empty-state-card a:hover {
                    transform: translateY(-1px);
                    box-shadow: 0 12px 24px rgba(0,0,0,0.08);
                }

        /* ================== ABOUT ================== */
        .about-card {
            display: flex;
            flex-direction: column;
            align-items: center;
            text-align: center;
            border: 1px solid rgba(0,0,0,0.06);
            border-radius: 20px;
            background: #fff;
            padding: 28px 24px;
            box-shadow: 0 18px 48px rgba(2,6,23,0.08);
        }

            .about-card h2 {
                margin: 0 0 14px;
                font-size: 28px;
                font-weight: 900;
                color: #0f172a;
                letter-spacing: -0.4px;
            }

        .readonlyText {
            max-width: 560px;
            margin: 0 auto;
            text-align: center;
            margin-top: 6px;
            font-size: 15px;
            line-height: 1.85;
            color: #0f172a;
            white-space: pre-wrap;
        }

        .muted {
            color: #64748b;
        }

        /* ================== SAĞ SIDEBAR ================== */
        .sidebar-right {
            width: 320px;
            border-left: 1px solid rgba(0,0,0,0.06);
            padding: 40px 34px;
            background: #fff;
        }

        .profile-pic-large {
            width: 92px;
            height: 92px;
            border-radius: 50%;
            background: #000;
            overflow: hidden;
            margin-bottom: 18px;
            box-shadow: 0 16px 38px rgba(2,6,23,0.14);
        }

            .profile-pic-large img {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }

        .sidebar-right > div {
            font-weight: 800;
            color: #0f172a;
            margin-bottom: 12px;
        }

        .edit-profile-btn {
            display: inline-flex;
            align-items: center;
            gap: 10px;
            padding: 10px 14px;
            border-radius: 12px;
            border: 1px solid rgba(22,163,74,.35);
            background: rgba(22,163,74,.08);
            color: #16a34a;
            font-weight: 900;
            text-decoration: none;
            transition: .18s ease;
        }

            .edit-profile-btn:hover {
                transform: translateY(-1px);
                box-shadow: 0 12px 24px rgba(2,6,23,0.10);
            }
    </style>
</head>

<body>
    <div class="layout-container">

        <!-- SOL MENÜ -->
        <nav class="sidebar-left">
            <a href="/Home/Index" class="logo">NOVUS</a>

            <a href="/Home/Index" class="menu-item">
                <span class="menu-icon">🏠</span>Home
            </a>

            <a href="/Home/Library" class="menu-item">
                <span class="menu-icon">📚</span>Library
            </a>

            <a href="/Home/Profile" class="menu-item active">
                <span class="menu-icon">👤</span>Profile
            </a>

            <div class="menu-group">
                <a href="/Home/Stats" class="menu-item">
                    <span class="menu-icon">📊</span>Stats
                </a>

                <a href="/Home/Write" class="menu-item write-btn">
                    <span class="menu-icon">✍️</span>Write
                </a>
            </div>

            <div style="margin-top:auto;font-size:11px;color:#94a3b8">
                © 2025 Novus
            </div>
        </nav>

        <!-- ORTA -->
        <main class="main-content">
            <h1 class="profile-name-header">@ViewBag.DisplayName</h1>

            <div class="tabs">
                <button type="button" class="tab active" data-tab="home">🏡 Home</button>
                <button type="button" class="tab" data-tab="about">ℹ️ About</button>
            </div>

            <div id="tab-home" class="tab-panel active">
                <div class="empty-state-card">
                    <h3>Bir İçerik Oluştur</h3>
                    <p>Yazını paylaşmak için “Yeni Yazı” bölümünden başlayabilirsin.</p>
                    <a href="/Home/Write">✍️ Yeni Yazı</a>
                </div>
            </div>

            <div id="tab-about" class="tab-panel">
                <section class="about-card">
                    <h2>Hakkımda</h2>

                    @if (!string.IsNullOrWhiteSpace(ViewBag.AboutText as string))
                    {
                        <p class="readonlyText">
                            @Html.Raw(Html.Encode(ViewBag.AboutText))
                        </p>
                    }
                    else
                    {
                        <p class="readonlyText muted">
                            Henüz hakkında bilgisi eklenmemiş.
                        </p>
                    }
                </section>
            </div>

        </main>

        <!-- SAĞ -->
        <aside class="sidebar-right">
            <div class="profile-pic-large">
                <img src="https://ui-avatars.com/api/?name=@Uri.EscapeDataString((string)ViewBag.DisplayName)&background=000&color=fff&size=128" />
            </div>

            <div>@ViewBag.DisplayName</div>

            <a href="/Home/EditProfile" class="edit-profile-btn">
                ⚙️ Edit User Name
            </a>
        </aside>

    </div>

    <script>
        const tabs = document.querySelectorAll(".tab");
        const panels = {
            home: document.getElementById("tab-home"),
            about: document.getElementById("tab-about")
        };

        tabs.forEach(t => {
            t.addEventListener("click", () => {
                tabs.forEach(x => x.classList.remove("active"));
                t.classList.add("active");

                Object.values(panels).forEach(p => p.classList.remove("active"));
                panels[t.dataset.tab].classList.add("active");
            });
        });
    </script>

</body>
</html>

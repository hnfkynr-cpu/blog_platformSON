@model List<İÇERİK_YÖNETİMİ_VE_BLOG_1.Models.YaziModeli>

@{
    ViewData["Title"] = "Library";
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Novus - Library</title>
    <style>
        body {
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen, Ubuntu, Cantarell, "Open Sans", "Helvetica Neue", sans-serif;
            margin: 0;
            background: linear-gradient(180deg, #f7fbff 0%, #ffffff 50%, #fbf8ff 100%);
            color: #242424;
        }

        :root {
            --ocean-blue: #0D8ABC;
            --ocean-blue-hover: #0a6f99;
            --ocean-blue-soft: rgba(13, 138, 188, .12);
            --medium-green: #1a8917;
            --panel: rgba(255,255,255,.86);
            --border: rgba(15, 23, 42, .08);
            --muted: #6b7280;
            --shadow: 0 18px 50px rgba(15, 23, 42, .10);
            --shadow-soft: 0 12px 28px rgba(15, 23, 42, .07);
            --radius: 16px;
        }

        .container-fluid {
            display: flex;
            min-height: 100vh;
            padding: 0;
            margin: 0;
        }

        /* --- SOL MENÜ (Standart) --- */
        .sidebar-left {
            width: 300px;
            padding: 28px 26px;
            border-right: 1px solid var(--border);
            position: sticky;
            top: 0;
            height: 100vh;
            display: flex;
            flex-direction: column;
            box-sizing: border-box;
            flex-shrink: 0;
            background: rgba(255,255,255,.72);
            backdrop-filter: blur(10px);
        }

        .logo-container {
            display: flex;
            align-items: center;
            margin-bottom: 34px;
        }

        .logo {
            font-size: 28px;
            font-weight: 900;
            letter-spacing: -1.2px;
            color: #0b1220;
            text-decoration: none;
            position: relative;
            padding-left: 6px;
        }

            .logo::after {
                content: "";
                display: block;
                width: 74px;
                height: 10px;
                border-radius: 999px;
                background: linear-gradient(90deg, rgba(13,138,188,.25), rgba(167,139,250,.18));
                position: absolute;
                left: 0;
                bottom: -8px;
            }

        .menu-item {
            display: flex;
            align-items: center;
            padding: 11px 12px;
            font-size: 15px;
            color: #6b7280;
            text-decoration: none;
            transition: all 0.2s;
            border-radius: 12px;
            margin-bottom: 6px;
        }

            .menu-item.active {
                color: #0b1220 !important;
                font-weight: 650;
                background: linear-gradient(90deg, rgba(13,138,188,.14), rgba(167,139,250,.10));
                box-shadow: 0 10px 18px rgba(13,138,188,.08);
            }

            .menu-item:hover {
                color: #0b1220;
                background: rgba(13,138,188,.08);
            }

        .menu-icon {
            margin-right: 14px;
            font-size: 20px;
            width: 26px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .menu-group {
            margin-top: 22px;
            padding-top: 18px;
            border-top: 1px solid var(--border);
        }

        .menu-group-title {
            font-size: 12px;
            font-weight: 800;
            color: #0b1220;
            text-transform: uppercase;
            margin-bottom: 6px;
            letter-spacing: 0.6px;
        }

        /* --- SAĞ ANA ALAN --- */
        .content-area {
            flex-grow: 1;
            display: flex;
            flex-direction: column;
        }

        /* HEADER DÜZENLEMESİ */
        .header-bar {
            height: 74px;
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0 46px;
            border-bottom: 1px solid var(--border);
            position: sticky;
            top: 0;
            background: rgba(255,255,255,.78);
            backdrop-filter: blur(12px);
            z-index: 100;
        }

        .header-left {
            flex: 1;
            display: flex;
            align-items: center;
        }

        .search-container {
            position: relative;
            width: 100%;
            max-width: 420px;
        }

        .search-box {
            width: 100%;
            padding: 12px 16px 12px 44px;
            background: rgba(15, 23, 42, .03);
            border: 1px solid rgba(15, 23, 42, .06);
            border-radius: 999px;
            font-size: 14px;
            outline: none;
            transition: all 0.2s ease;
        }

            .search-box:focus {
                background: #fff;
                border-color: rgba(13,138,188,.28);
                box-shadow: 0 0 0 6px rgba(13,138,188,.12);
            }

        .search-icon-static {
            position: absolute;
            left: 16px;
            top: 50%;
            transform: translateY(-50%);
            color: #94a3b8;
            font-size: 15px;
            pointer-events: none;
        }

        .user-avatar-small {
            width: 36px;
            height: 36px;
            border-radius: 50%;
            background: linear-gradient(135deg, rgba(13,138,188,1), rgba(167,139,250,1));
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: 800;
            font-size: 12px;
            border: 2px solid rgba(255,255,255,.85);
            box-shadow: 0 10px 18px rgba(13,138,188,.18);
        }

        /* --- LIBRARY İÇERİK --- */
        .library-content {
            width: 100%;
            max-width: 980px;
            padding: 46px;
            box-sizing: border-box;
        }

        .lib-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 26px;
        }

        .lib-title {
            font-size: 44px;
            font-weight: 850;
            margin: 0;
            letter-spacing: -1.2px;
            color: #0b1220;
        }

        .btn-new-list {
            background: linear-gradient(135deg, rgba(13,138,188,1), rgba(167,139,250,1));
            color: white;
            border: none;
            padding: 11px 20px;
            border-radius: 999px;
            font-size: 14px;
            cursor: pointer;
            text-decoration: none;
            font-weight: 650;
            transition: transform 0.12s, box-shadow 0.2s;
            box-shadow: 0 14px 30px rgba(13,138,188,.18);
        }

            .btn-new-list:hover {
                transform: translateY(-1px);
                box-shadow: 0 18px 36px rgba(13,138,188,.22);
            }

        /* SEKMELER */
        .lib-tabs {
            display: flex;
            gap: 12px;
            border-bottom: 1px solid var(--border);
            margin-bottom: 26px;
            padding-bottom: 10px;
            flex-wrap: wrap;
        }

        .lib-tab {
            padding: 10px 14px;
            font-size: 14px;
            color: #64748b;
            cursor: pointer;
            text-decoration: none;
            position: relative;
            border-radius: 999px;
            transition: .2s;
        }

            .lib-tab:hover {
                color: #0b1220;
                background: rgba(13,138,188,.08);
            }

            .lib-tab.active {
                color: #0b1220;
                font-weight: 650;
                background: linear-gradient(90deg, rgba(13,138,188,.14), rgba(167,139,250,.10));
                box-shadow: 0 10px 18px rgba(15, 23, 42, .06);
            }

                .lib-tab.active::after {
                    content: none;
                }

        /* MAVİ BANNER */
        .blue-banner {
            background: radial-gradient(1100px 260px at 10% 10%, rgba(255,255,255,.18) 0%, rgba(255,255,255,0) 60%), linear-gradient(135deg, rgba(13,138,188,1) 0%, rgba(167,139,250,1) 120%);
            color: white;
            padding: 38px 44px;
            border-radius: 18px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 34px;
            position: relative;
            overflow: hidden;
            box-shadow: 0 22px 55px rgba(13, 138, 188, 0.22);
            border: 1px solid rgba(255,255,255,.22);
        }

            .blue-banner::before {
                content: "";
                position: absolute;
                inset: -40px;
                background: radial-gradient(circle at 80% 30%, rgba(255,255,255,.18), transparent 55%);
                pointer-events: none;
            }

        .btn-start-list {
            background-color: rgba(0,0,0,.92);
            color: white;
            border: 1px solid rgba(255,255,255,.18);
            padding: 11px 22px;
            border-radius: 999px;
            font-size: 14px;
            cursor: pointer;
            margin-top: 14px;
            font-weight: 650;
            transition: transform 0.12s, box-shadow .2s, background .2s;
            box-shadow: 0 14px 30px rgba(0,0,0,.18);
        }

            .btn-start-list:hover {
                transform: translateY(-1px);
                background: rgba(0,0,0,1);
            }

            .btn-start-list:active {
                transform: scale(0.98);
            }

        /* LİSTE KARTI */
        .reading-list-card {
            background: rgba(255,255,255,.88);
            border: 1px solid rgba(15, 23, 42, .08);
            border-radius: 18px;
            padding: 26px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            transition: transform 0.18s, box-shadow 0.2s, border-color 0.2s;
            cursor: pointer;
            box-shadow: 0 12px 28px rgba(15, 23, 42, .06);
            margin-top: 18px;
        }

            .reading-list-card:hover {
                transform: translateY(-2px);
                box-shadow: var(--shadow);
                border-color: rgba(13,138,188,.22);
            }

        .write-btn {
            color: var(--medium-green) !important;
            font-weight: 650;
        }

            .write-btn:hover {
                background: rgba(26,137,23,.08);
                color: #156d12 !important;
            }

        /* küçük ekranlarda */
        @@media (max-width: 980px) {
            .sidebar-left {
                width: 270px;
            }

            .library-content {
                padding: 30px 22px;
                max-width: 900px;
            }

            .header-bar {
                padding: 0 22px;
            }

            .search-container {
                max-width: 320px;
            }
        }

        @@media (max-width: 760px) {
            .sidebar-left {
                display: none;
            }

            .library-content {
                padding: 24px 16px;
            }

            .search-container {
                max-width: 100%;
            }

            .lib-title {
                font-size: 36px;
            }

            .blue-banner {
                padding: 28px 22px;
                border-radius: 16px;
            }
        }
    </style>

</head>
<body>

    <div class="container-fluid">
        <nav class="sidebar-left">
            <div class="logo-container">
                <a asp-controller="Home" asp-action="Index" class="logo">NOVUS</a>
            </div>

            <a asp-controller="Home" asp-action="Index" class="menu-item"><span class="menu-icon">🏠</span> Home</a>
            <a asp-controller="Home" asp-action="Library" class="menu-item active"><span class="menu-icon">📚</span> Library</a>
            <a asp-controller="Home" asp-action="Profile" class="menu-item"><span class="menu-icon">👤</span> Profile</a>

            <div class="menu-group">
                
                <a asp-controller="Home" asp-action="Stats" class="menu-item"><span class="menu-icon">📊</span> Stats</a>
                <a asp-controller="Home" asp-action="Write" class="menu-item write-btn">
                    <span class="menu-icon">✍️</span> Write
                </a>
            </div>

            
        </nav>

        <div class="content-area">
            <header class="header-bar">
                <div class="header-left">
                    <div class="search-container">
                        <span class="search-icon-static">🔍</span>
                        <input type="text" class="search-box" placeholder="Search" />
                    </div>
                </div>

                <div style="display:flex; align-items:center; gap:25px;">
                    <span style="cursor: pointer; color: #757575;">🔔</span>
                    <div class="user-avatar-small">KA</div>
                </div>
            </header>

            <main class="library-content">
                <div class="lib-header">
                    <h1 class="lib-title">Your library</h1>
                    
                </div>

                <div class="lib-tabs">
                    <a asp-action="Library" asp-route-tab="your"
                       class="lib-tab @(ViewBag.ActiveTab == "your" ? "active" : "")">
                        Your lists
                    </a>

                    <a asp-action="Library" asp-route-tab="saved"
                       class="lib-tab @(ViewBag.ActiveTab == "saved" ? "active" : "")">
                        Saved lists
                    </a>

                    <a asp-action="Library" asp-route-tab="comments"
                       class="lib-tab @(ViewBag.ActiveTab == "comments" ? "active" : "")">
                        Comments
                    </a>

                    <a asp-action="Library" asp-route-tab="likes"
                       class="lib-tab @(ViewBag.ActiveTab == "likes" ? "active" : "")">
                        Likes
                    </a>
                </div>

                <div class="blue-banner">
                    <div style="position:relative; z-index:2;">
                        <h2 style="font-size:22px; font-weight:700; margin:0 0 5px 0;">Senin Hayatın Seni içerir<br>NOVUS  Hep  Yanında</h2>
                        <button class="btn-start-list">Kendi İçeriğini Oluştur</button>
                    </div>

                    <div style="font-size:80px; opacity:0.25; transform: rotate(15deg); position:absolute; right:30px; top:10px;">🔖</div>
                </div>

                @* ===================== SADECE BU BÖLÜM EKLENDİ/DEĞİŞTİ ===================== *@
                @{
                    var activeTab = ViewBag.ActiveTab as string ?? "your";
                }

                @* COMMENTS: Model yerine ViewBag.CommentItems basıyoruz (YaziModeli’nde yorum alanı yok) *@
                @if (activeTab == "comments")
                {
                    var commentItems = ViewBag.CommentItems as IEnumerable<dynamic>;

                    if (commentItems != null && commentItems.Any())
                    {
                        foreach (var c in commentItems)
                        {
                            <div style="border:1px solid #f2f2f2;border-radius:10px;padding:16px;margin-bottom:14px;">
                                <div style="font-size:13px;color:#757575;margin-bottom:8px;">
                                    @c.CreatedAt · @c.BlogTitle
                                </div>

                                <div style="font-size:14px;color:#242424;line-height:1.7;margin-bottom:10px;">
                                    @c.CommentText
                                </div>

                                <a asp-action="Detay" asp-route-id="@c.BlogId"
                                   style="font-size:13px;color:var(--ocean-blue);text-decoration:none;font-weight:600;">
                                    Yazıya git →
                                </a>
                            </div>
                        }
                    }
                    else
                    {
                        <p style="color:#757575;">Bu bölümde içerik bulunamadı.</p>
                    }
                }
                else
                {
                    @* YOUR / SAVED / LIKES: hepsi index gibi blog önizleme *@
                    if (Model != null && Model.Count > 0)
                    {
                        foreach (var yazi in Model)
                        {
                            <a asp-action="Detay" asp-route-id="@yazi.Id"
                               style="text-decoration:none;color:inherit;">

                                <div style="border-bottom:1px solid #f2f2f2;padding:20px 0;">
                                    <div style="font-size:13px;color:#757575;margin-bottom:6px;">
                                        @yazi.Yazar · @yazi.Tarih
                                    </div>

                                    <h3 style="margin:0 0 8px;font-size:20px;font-weight:700;">
                                        @yazi.Baslik
                                    </h3>

                                    <p style="margin:0;color:#555;font-size:14px;">
                                        @yazi.IcerikOzet
                                    </p>

                                    <div style="margin-top:8px;font-size:13px;color:#757575;">
                                        ❤️ @yazi.BegeniSayisi · 💬 @yazi.YorumSayisi
                                    </div>
                                </div>
                            </a>
                        }
                    }
                    else
                    {
                        <p style="color:#757575;">Bu bölümde içerik bulunamadı.</p>
                    }
                }
                @* ===================== SADECE BU BÖLÜM EKLENDİ/DEĞİŞTİ ===================== *@


                <div class="reading-list-card">
                    <div>
                        <div style="font-size:13px; font-weight:500; display:flex; align-items:center; gap:8px; margin-bottom:10px;">
                            <div class="user-avatar-small" style="width:24px; height:24px; font-size:10px;">KA</div>
                            KA (Sen)
                        </div>
                        <h3 style="margin:0; font-size:20px; font-weight:700;">Reading list</h3>
                        <div style="font-size:14px; color:#757575; margin-top:8px; display:flex; gap:10px; align-items:center;">
                            <span>0 stories</span>
                            <span style="width:3px; height:3px; background:#757575; border-radius:50%;"></span>
                            <span style="display:inline-flex; align-items:center; gap:4px;">🔒 Private</span>
                        </div>
                    </div>
                    <div style="display:flex; gap:3px; opacity:0.6;">
                        <div style="width:50px; height:50px; background:#e0e0e0; border-radius:4px 0 0 4px;"></div>
                        <div style="width:50px; height:50px; background:#d0d0d0;"></div>
                        <div style="width:50px; height:50px; background:#c0c0c0; border-radius:0 4px 4px 0;"></div>
                    </div>
                </div>

            </main>
        </div>
    </div>

</body>
</html>

@{
    ViewData["Title"] = "Stories";
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Novus - Stories</title>
    <style>
        body {
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen, Ubuntu, Cantarell, "Open Sans", "Helvetica Neue", sans-serif;
            margin: 0;
            background-color: white;
            color: #242424;
        }

        :root {
            --ocean-blue: #0D8ABC;
            --medium-green: #1a8917;
        }

        .container-fluid {
            display: flex;
            min-height: 100vh;
        }

        /* --- 1. SOL MENÜ (Standart) --- */
        .sidebar-left {
            width: 280px;
            padding: 24px;
            border-right: 1px solid #f2f2f2;
            position: sticky;
            top: 0;
            height: 100vh;
            display: flex;
            flex-direction: column;
            box-sizing: border-box;
            flex-shrink: 0;
        }

        .logo-container {
            display: flex;
            align-items: center;
            /* gap: 15px; <- İkon silindiği için boşluk gereksiz */
            margin-bottom: 35px;
        }

        .logo {
            font-size: 26px;
            font-weight: 800;
            letter-spacing: -1px;
            color: #000;
            text-decoration: none;
        }

        .menu-item {
            display: flex;
            align-items: center;
            padding: 10px 0;
            font-size: 15px;
            color: #757575;
            text-decoration: none;
            transition: 0.2s;
        }

            .menu-item.active {
                color: #000 !important;
                font-weight: 600;
            }

            .menu-item:hover {
                color: #000;
            }

        .menu-icon {
            margin-right: 15px;
            font-size: 20px;
        }

        .menu-group {
            margin-top: 25px;
            padding-top: 15px;
            border-top: 1px solid #f2f2f2;
        }

        .menu-group-title {
            font-size: 12px;
            font-weight: 700;
            color: #242424;
            text-transform: uppercase;
            margin-bottom: 4px;
        }

        .write-btn {
            color: var(--medium-green) !important;
            font-weight: 500;
        }

        /* --- 2. STORIES SAYFASI İÇERİK --- */
        .content-area {
            flex-grow: 1;
            padding: 50px 80px;
            max-width: 900px; /* İçeriğin çok yayılmasını engelle */
        }

        /* Başlık ve Buton Alanı */
        .stories-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 40px;
        }

        .stories-title {
            font-size: 42px;
            font-weight: 700;
            margin: 0;
            letter-spacing: -1px;
            color: #242424;
        }

        .btn-import {
            background-color: transparent;
            color: #242424;
            border: 1px solid #242424;
            padding: 8px 18px;
            border-radius: 20px;
            font-size: 14px;
            cursor: pointer;
            text-decoration: none;
            transition: all 0.2s;
        }

            .btn-import:hover {
                border-color: #000;
                background-color: rgba(0,0,0,0.03);
            }

        .btn-write-new {
            background-color: var(--medium-green);
            color: white;
            border: none;
            padding: 9px 20px;
            border-radius: 20px;
            font-size: 14px;
            cursor: pointer;
            text-decoration: none;
            margin-left: 15px;
        }

        /* Sekmeler (Tabs) */
        .stories-tabs {
            display: flex;
            gap: 30px;
            border-bottom: 1px solid #f2f2f2;
            margin-bottom: 50px;
        }

        .s-tab {
            padding-bottom: 15px;
            font-size: 14px;
            color: #757575;
            text-decoration: none;
            cursor: pointer;
            position: relative;
        }

            .s-tab:hover {
                color: #242424;
            }

            .s-tab.active {
                color: #242424;
                font-weight: 500;
            }

                .s-tab.active::after {
                    content: '';
                    position: absolute;
                    bottom: 0;
                    left: 0;
                    width: 100%;
                    height: 1px;
                    background: #242424;
                }

        /* Boş Durum Mesajı (Empty State) */
        .empty-state {
            text-align: center;
            color: #242424;
            margin-top: 80px;
            font-size: 16px;
        }

        .empty-link {
            color: #1a8917; /* Medium Yeşili Link */
            text-decoration: underline;
            cursor: pointer;
        }
    </style>
</head>
<body>

    <div class="container-fluid">
        <nav class="sidebar-left">
            <div class="logo-container">
                <a asp-controller="Home" asp-action="Index" class="logo">NOVUS</a>
            </div>

            <a asp-controller="Home" asp-action="Index" class="menu-item"><span class="menu-icon">🏠</span> Home</a>
            <a asp-controller="Home" asp-action="Library" class="menu-item"><span class="menu-icon">📚</span> Library</a>
            <a asp-controller="Home" asp-action="Profile" class="menu-item"><span class="menu-icon">👤</span> Profile</a>

            <div class="menu-group">
                <a asp-controller="Home" asp-action="Stories" class="menu-item active"><span class="menu-icon">📝</span> Stories</a>
                <a asp-controller="Home" asp-action="Stats" class="menu-item"><span class="menu-icon">📊</span> Stats</a>
                <a asp-controller="Home" asp-action="Write" class="menu-item write-btn">
                    <span class="menu-icon">✍️</span> Write
                </a>
            </div>
            <div class="menu-group">
                <div class="menu-group-title">FOLLOWERS</div>
                <a href="/Home/Channels" class="menu-item">
                    <span class="menu-icon">🔔</span> Channels
                </a>
            </div>
        </nav>

        <div class="content-area">

            <div class="stories-header">
                <h1 class="stories-title">Stories</h1>
                <div>
                    <button class="btn-import">Import a story</button>
                    <a asp-controller="Home" asp-action="Write" class="btn-write-new">
                        Write a story
                    </a>
                </div>
            </div>

            <div class="stories-tabs">
                <div class="s-tab active">Drafts</div>
                <div class="s-tab">Scheduled</div>
                <div class="s-tab">Published</div>
                <div class="s-tab">Unlisted</div>
                <div class="s-tab">Submissions</div>
            </div>

            <div class="empty-state">
                <p style="margin-bottom: 10px;">No stories in draft.</p>
                <p>Why not <a href="/Home/Write" class="empty-link">start writing one?</a></p>
            </div>

        </div>
    </div>

</body>
</html>
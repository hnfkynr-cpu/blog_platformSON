@model List<İÇERİK_YÖNETİMİ_VE_BLOG_1.Models.ChannelYaziModel>

@{
    ViewData["Title"] = "Following";
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>Channels - Novus</title>
    <style>
        /* --- GENEL AYARLAR --- */
        body {
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
            margin: 0;
            background-color: #fff;
            color: #242424;
            display: flex;
        }

        /* --- SOL MENÜ (Stabil Tasarım) --- */
        .sidebar-left {
            width: 280px;
            padding: 24px;
            border-right: 1px solid #f2f2f2;
            position: sticky;
            top: 0;
            height: 100vh;
            display: flex;
            flex-direction: column;
            box-sizing: border-box;
            flex-shrink: 0;
            background: white;
        }

        .logo-container {
            display: flex;
            align-items: center;
            margin-bottom: 35px;
        }

        .logo {
            font-size: 26px;
            font-weight: 800;
            letter-spacing: -1px;
            color: #000;
            text-decoration: none;
        }

        .menu-item {
            display: flex;
            align-items: center;
            padding: 10px 0;
            font-size: 15px;
            color: #757575;
            text-decoration: none;
            transition: all 0.2s;
        }

            .menu-item:hover, .menu-item.active {
                color: #000;
                font-weight: 600; /* Aktifken kalın olsun */
            }

        .menu-icon {
            margin-right: 15px;
            font-size: 20px;
        }

        /* Gruplama ve Çizgiler */
        .menu-group {
            margin-top: 25px;
            padding-top: 15px;
            border-top: 1px solid #f2f2f2;
            display: flex;
            flex-direction: column;
        }

        .menu-group-title {
            font-size: 12px;
            font-weight: 700;
            color: #242424;
            text-transform: uppercase;
            margin-bottom: 4px;
        }

        .write-btn {
            color: #1a8917 !important;
            font-weight: 500;
        }


        /* --- ORTA ALAN TASARIMI --- */
        .channel-container {
            flex: 1;
            max-width: 720px;
            margin: 0 auto;
            padding: 40px 60px;
        }

        /* Üst Başlık ve Sekmeler */
        .page-title {
            font-size: 42px;
            font-weight: 700;
            margin-bottom: 30px;
            color: #242424;
        }

        .tabs-wrapper {
            display: flex;
            align-items: center;
            border-bottom: 1px solid #f2f2f2;
            margin-bottom: 30px;
            gap: 15px;
            padding-bottom: 15px;
        }

        .pill-tab {
            padding: 8px 16px;
            border-radius: 20px;
            font-size: 14px;
            cursor: pointer;
            border: 1px solid #e6e6e6;
            color: #757575;
            transition: all 0.2s;
        }

            .pill-tab.active {
                color: #242424;
                border-color: #242424;
                font-weight: 500;
            }

        .plus-btn {
            width: 32px;
            height: 32px;
            border-radius: 50%;
            border: 1px solid #e6e6e6;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #757575;
            cursor: pointer;
            font-size: 18px;
            margin-left: 5px;
        }

        /* Makale Kartı */
        .article-card {
            display: flex;
            justify-content: space-between;
            margin-bottom: 48px;
            gap: 20px;
        }

        .article-content {
            flex: 1;
            display: flex;
            flex-direction: column;
        }

        .author-info {
            display: flex;
            align-items: center;
            margin-bottom: 8px;
            font-size: 13px;
        }

        .author-avatar {
            width: 20px;
            height: 20px;
            border-radius: 50%;
            margin-right: 8px;
        }

        .author-name {
            font-weight: 500;
            color: #242424;
        }

        .publication-name {
            color: #757575;
        }

        .article-title {
            font-size: 20px;
            font-weight: 700;
            color: #242424;
            margin-bottom: 4px;
            line-height: 1.2;
            cursor: pointer;
        }

        .article-desc {
            font-size: 16px;
            color: #757575;
            font-family: "Charter", Georgia, serif;
            margin-bottom: 8px;
            line-height: 1.4;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }

        .meta-info {
            display: flex;
            align-items: center;
            color: #757575;
            font-size: 13px;
            margin-top: auto;
        }

        .meta-item {
            margin-right: 15px;
            display: flex;
            align-items: center;
            gap: 4px;
        }

        .article-image {
            width: 112px;
            height: 112px;
            flex-shrink: 0;
        }

            .article-image img {
                width: 100%;
                height: 100%;
                object-fit: cover;
                border-radius: 2px;
            }

    </style>
</head>
<body>

    <nav class="sidebar-left">
        <div class="logo-container">
            <a href="/Home/Index" class="logo">NOVUS</a>
        </div>

        <a href="/Home/Index" class="menu-item"><span class="menu-icon">🏠</span> Home</a>
        <a href="/Home/Library" class="menu-item"><span class="menu-icon">📚</span> Library</a>
        <a href="/Home/Profile" class="menu-item"><span class="menu-icon">👤</span> Profile</a>

        <div class="menu-group">
            <a href="/Home/Stories" class="menu-item"><span class="menu-icon">📝</span> Stories</a>
            <a href="/Home/Stats" class="menu-item"><span class="menu-icon">📊</span> Stats</a>
            <a href="/Home/Write" class="menu-item write-btn">
                <span class="menu-icon">✍️</span> Write
            </a>
        </div>

        <div class="menu-group">
            <div class="menu-group-title">FOLLOWERS</div>
            <a href="/Home/Channels" class="menu-item active">
                <span class="menu-icon">🔔</span> Channels
            </a>
        </div>
    </nav>


    <div class="channel-container">

        <h1 class="page-title">Following</h1>

        <div class="tabs-wrapper">
            <div class="pill-tab active">Writers and publications</div>
            <div class="pill-tab">Topics</div>
            <div class="plus-btn">+</div>
        </div>

        <div class="articles-list">
            @if (Model != null)
            {
                foreach (var yazi in Model)
                {
                    <div class="article-card">
                        <div class="article-content">

                            <div class="author-info">
                                <img src="@yazi.YazarResimUrl" class="author-avatar" alt="Avatar">
                                <span class="author-name">@yazi.Yazar</span>
                                <span style="margin: 0 4px; color: #757575;">in</span>
                                <span class="publication-name">@yazi.YayinAdi</span>
                            </div>

                            <div class="article-title">@yazi.Baslik</div>
                            <div class="article-desc">@yazi.Ozet</div>

                            <div class="meta-info">
                                <div class="meta-item">@yazi.Tarih</div>

                                <div class="meta-item">
                                    <span>👏</span> @yazi.BegenmeSayisi
                                </div>

                                <div class="meta-item">
                                    <span>💬</span> @yazi.YorumSayisi
                                </div>

                                <div class="meta-item" style="margin-left: auto;">
                                    <span>📥</span> <span style="margin-left:10px">...</span>
                                </div>
                            </div>
                        </div>

                        <div class="article-image">
                            <img src="@yazi.KapakResmiUrl" alt="Kapak Resmi" />
                        </div>
                    </div>

                    <hr style="border: 0; border-top: 1px solid #f2f2f2; margin-bottom: 48px;">
                }
            }
        </div>

    </div>

</body>
</html>
@model List<İÇERİK_YÖNETİMİ_VE_BLOG_1.Models.YaziModeli>

@{
    ViewData["Title"] = "Ana Sayfa";
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Novus - Blog</title>
    <style>
        body {
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen, Ubuntu, Cantarell, "Open Sans", "Helvetica Neue", sans-serif;
            margin: 0;
            background: linear-gradient(180deg, #f7fbff 0%, #ffffff 45%, #fbf8ff 100%);
            color: #242424;
        }

        :root {
            --ocean-blue: #0D8ABC;
            --ocean-blue-soft: rgba(13, 138, 188, .10);
            --medium-green: #1a8917;
            --panel: rgba(255,255,255,.86);
            --panel-solid: #ffffff;
            --border: rgba(15, 23, 42, .08);
            --muted: #6b7280;
            --shadow: 0 18px 48px rgba(15, 23, 42, .08);
            --shadow-soft: 0 10px 26px rgba(15, 23, 42, .06);
            --radius: 16px;
        }

        .container-fluid {
            display: flex;
            min-height: 100vh;
            padding: 0;
            margin: 0;
        }

        /* --- SOL MENÜ --- */
        .sidebar-left {
            width: 300px; /* biraz büyüttük */
            padding: 28px 26px;
            border-right: 1px solid var(--border);
            position: sticky;
            top: 0;
            height: 100vh;
            display: flex;
            flex-direction: column;
            box-sizing: border-box;
            flex-shrink: 0;
            background: rgba(255,255,255,.72);
            backdrop-filter: blur(10px);
        }

        .logo-container {
            display: flex;
            align-items: center;
            margin-bottom: 34px;
        }

        .logo {
            font-size: 28px;
            font-weight: 900;
            letter-spacing: -1.2px;
            color: #0b1220;
            text-decoration: none;
            position: relative;
            padding-left: 6px;
        }

            .logo::after {
                content: "";
                display: block;
                width: 72px;
                height: 10px;
                border-radius: 999px;
                background: linear-gradient(90deg, rgba(13,138,188,.25), rgba(167,139,250,.18));
                position: absolute;
                left: 0;
                bottom: -8px;
                filter: blur(0px);
            }

        .menu-item {
            display: flex;
            align-items: center;
            padding: 11px 12px;
            font-size: 15px;
            color: #6b7280;
            text-decoration: none;
            transition: all 0.2s;
            border-radius: 12px;
            margin-bottom: 6px;
        }

            .menu-item.active {
                color: #0b1220 !important;
                font-weight: 650;
                background: linear-gradient(90deg, rgba(13,138,188,.14), rgba(167,139,250,.10));
                box-shadow: 0 10px 18px rgba(13,138,188,.08);
            }

            .menu-item:hover {
                color: #0b1220;
                background: rgba(13,138,188,.08);
            }

        .menu-icon {
            margin-right: 14px;
            font-size: 20px;
            width: 26px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .menu-group {
            margin-top: 22px;
            padding-top: 18px;
            border-top: 1px solid var(--border);
        }

        .menu-group-title {
            font-size: 12px;
            font-weight: 800;
            color: #0b1220;
            text-transform: uppercase;
            margin-bottom: 6px;
            letter-spacing: 0.6px;
        }

        .menu-group-subtitle {
            font-size: 11px;
            color: #94a3b8;
            margin-bottom: 12px;
            display: block;
        }

        /* --- SAĞ ANA ALAN --- */
        .content-area {
            flex-grow: 1;
            display: flex;
            flex-direction: column;
        }

        .header-bar {
            height: 74px; /* biraz büyüttük */
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0 46px;
            border-bottom: 1px solid var(--border);
            position: sticky;
            top: 0;
            background: rgba(255,255,255,.78);
            backdrop-filter: blur(12px);
            z-index: 100;
        }

        /* ARAMA FORMU */
        .search-container {
            position: relative;
            width: 100%;
            max-width: 420px; /* daha dolu görünsün */
        }

        .search-box {
            width: 100%;
            padding: 12px 16px 12px 44px;
            background: rgba(15, 23, 42, .03);
            border: 1px solid rgba(15, 23, 42, .06);
            border-radius: 999px;
            font-size: 14px;
            outline: none;
            transition: .2s;
        }

            .search-box:focus {
                background: #fff;
                border-color: rgba(13,138,188,.28);
                box-shadow: 0 0 0 6px rgba(13,138,188,.12);
            }

        .search-icon-btn {
            position: absolute;
            left: 16px;
            top: 50%;
            transform: translateY(-50%);
            background: none;
            border: none;
            color: #94a3b8;
            cursor: pointer;
            padding: 0;
            font-size: 14px;
        }

        .header-right {
            display: flex;
            align-items: center;
            gap: 18px;
        }

        .main-content {
            width: 100%;
            max-width: 980px; /* büyüt */
            margin: 0;
            padding: 46px;
            box-sizing: border-box;
        }

        .tabs {
            display: flex;
            gap: 18px;
            border-bottom: 1px solid var(--border);
            margin-bottom: 26px;
            padding-bottom: 6px;
        }

        .tab {
            padding: 10px 14px;
            font-size: 14px;
            color: #64748b;
            cursor: pointer;
            border-bottom: 1px solid transparent;
            border-radius: 999px;
            transition: .2s;
            background: transparent;
        }

            .tab.active {
                color: #0b1220;
                border-bottom: 1px solid transparent;
                background: linear-gradient(90deg, rgba(13,138,188,.14), rgba(167,139,250,.10));
                box-shadow: 0 10px 18px rgba(15, 23, 42, .06);
            }

        /* BLOG KARTI */
        .post-link {
            text-decoration: none;
            color: inherit;
            display: block;
        }

        .post-card {
            display: flex;
            justify-content: space-between;
            gap: 34px;
            padding: 22px 18px;
            margin-bottom: 14px;
            border: 1px solid rgba(15, 23, 42, .06);
            background: rgba(255,255,255,.88);
            backdrop-filter: blur(6px);
            transition: all 0.25s ease;
            border-radius: var(--radius);
            cursor: pointer;
            box-shadow: 0 12px 30px rgba(15, 23, 42, .05);
        }

            .post-card:hover {
                transform: translateY(-3px);
                box-shadow: var(--shadow);
                border-color: rgba(13,138,188,.22);
                background: #fff;
            }

                .post-card:hover .post-title {
                    color: var(--ocean-blue);
                    transition: color 0.2s ease;
                }

        .post-text {
            flex: 1;
            min-width: 0;
        }

        .post-meta {
            font-size: 13px;
            margin-bottom: 8px;
            font-weight: 650;
            color: #64748b;
            display: flex;
            align-items: center;
            gap: 10px;
        }

            .post-meta::before {
                content: "";
                width: 8px;
                height: 8px;
                border-radius: 50%;
                background: rgba(13,138,188,.35);
                box-shadow: 0 0 0 6px rgba(13,138,188,.10);
                display: inline-block;
            }

        .post-title {
            font-size: 22px; /* büyüttük */
            font-weight: 800;
            margin: 0 0 10px 0;
            line-height: 1.25;
            color: #0b1220;
            letter-spacing: -0.4px;
        }

        .post-summary {
            font-size: 16px;
            color: #6b7280;
            line-height: 1.65;
            margin-bottom: 14px;
        }

        .post-image img {
            width: 190px; /* biraz büyüttük */
            height: 128px;
            object-fit: cover;
            border-radius: 14px;
            box-shadow: var(--shadow-soft);
            border: 1px solid rgba(15, 23, 42, .06);
        }

        .user-avatar-small {
            width: 34px;
            height: 34px;
            border-radius: 50%;
            overflow: hidden;
            background: linear-gradient(135deg, rgba(13,138,188,1), rgba(167,139,250,1));
            box-shadow: 0 10px 18px rgba(13,138,188,.18);
            border: 2px solid rgba(255,255,255,.8);
        }

            .user-avatar-small img {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }

        /* Write Butonu Düzenlemesi */
        .write-btn {
            color: var(--medium-green) !important;
            margin-top: 0;
            font-weight: 650;
        }

            .write-btn:hover {
                color: #156d12 !important;
                background: rgba(26,137,23,.08);
            }

        /* küçük ekranlarda taşmayı engelle */
        @@media (max-width: 980px) {
            .sidebar-left {
                width: 270px;
            }

            .main-content {
                padding: 30px 22px;
                max-width: 900px;
            }

            .header-bar {
                padding: 0 22px;
            }

            .search-container {
                max-width: 320px;
            }

            .post-image img {
                width: 160px;
                height: 110px;
                border-radius: 12px;
            }
        }

        @@media (max-width: 760px) {
            .sidebar-left {
                display: none;
            }

            .main-content {
                padding: 24px 16px;
            }

            .post-card {
                flex-direction: column;
                gap: 14px;
            }

            .post-image img {
                width: 100%;
                height: 180px;
            }

            .search-container {
                max-width: 100%;
            }
        }
    </style>

</head>
<body>

    <div class="container-fluid">
        <nav class="sidebar-left">
            <div class="logo-container">
                <a asp-controller="Home" asp-action="Index" class="logo">NOVUS</a>
            </div>

            <a asp-controller="Home" asp-action="Index" class="menu-item active"><span class="menu-icon">🏠</span> Home</a>
            <a asp-controller="Home" asp-action="Library" class="menu-item"><span class="menu-icon">📚</span> Library</a>
            <a asp-controller="Home" asp-action="Profile" class="menu-item"><span class="menu-icon">👤</span> Profile</a>

            <div class="menu-group">
               

                <a asp-controller="Home" asp-action="Stats" class="menu-item"><span class="menu-icon">📊</span> Stats</a>
                <a asp-controller="Home" asp-action="Write" class="menu-item write-btn">
                    <span class="menu-icon">✍️</span> Write
                </a>
            </div>
           

            <div style="margin-top: auto; font-size: 11px; color: #bdc3c7;">
                © 2025 Novus • Privacy • Terms
            </div>
        </nav>

        <div class="content-area">
            <header class="header-bar">
                <div class="header-left">
                    <form asp-controller="Home" asp-action="Index" method="get" class="search-container">
                        <button type="submit" class="search-icon-btn">🔍</button>
                        <input type="text" name="query" class="search-box" placeholder="Search" value="@Context.Request.Query["query"]" />
                    </form>
                </div>
                <div class="header-right">
                    <span style="font-size: 20px; cursor: pointer; color: #757575;">🔔</span>
                    <div class="user-avatar-small">
                        <img src="https://ui-avatars.com/api/?name=KA&background=0D8ABC&color=fff" alt="Profil">
                    </div>
                </div>
            </header>

            <main class="main-content">
                <div class="tabs">
                    <div class="tab active">For you</div>
                    
                </div>

                @if (Model == null || Model.Count == 0)
                {
                    <p style="color: #757575; padding: 20px;">Aradığınız kriterlere uygun sonuç bulunamadı.</p>
                }
                else
                {
                    @foreach (var yazi in Model)
                    {
                        <a asp-controller="Home" asp-action="Detay" asp-route-id="@yazi.Id" class="post-link">
                            <article class="post-card">
                                <div class="post-text">
                                    <div class="post-meta">@yazi.Yazar • @yazi.Tarih</div>
                                    <h2 class="post-title">@yazi.Baslik</h2>

                                    <!-- ✅ Index: SADECE ÖZET -->
                                    <div class="post-summary">@yazi.IcerikOzet</div>

                                    <div style="font-size: 13px; color: #757575; display:flex; align-items:center; gap:10px; flex-wrap:wrap;">
                                        <span>💬 @yazi.YorumSayisi</span>
                                        <span>·</span>
                                        <span>❤️ @yazi.BegeniSayisi</span>
                                        <span>·</span>

                                        <form asp-action="ToggleSave" method="post" style="display:inline;">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="blogId" value="@yazi.Id" />
                                            <input type="hidden" name="returnUrl" value="@Context.Request.Path@Context.Request.QueryString" />

                                            <button type="submit"
                                                    style="border:none;background:none;padding:0;margin:0;cursor:pointer;color:#757575;font-size:13px;">
                                                @(yazi.IsSaved ? "📥 Saved" : "📥 Save") (@yazi.KaydetSayisi)
                                            </button>
                                        </form>
                                    </div>

                                </div>
                                <div class="post-image">
                                    <img src="@yazi.ResimUrl" alt="@yazi.Baslik">
                                </div>
                            </article>
                        </a>
                    }
                }
            </main>
        </div>
    </div>

</body>
</html>
